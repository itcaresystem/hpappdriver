<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bd_image"
    tools:context="ride.happyy.driver.activity.ForgotPasswordActivity">

    <LinearLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/phoneverificationLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical|start"
                android:orientation="vertical"
                android:padding="20dp">

                <ride.happyy.driver.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EARN WITH"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:textAllCaps="true"/>

                <ride.happyy.driver.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HAPPYY DRIVE"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:id="@+id/iv_registration_mobile_country_flag"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:padding="2dp"
                    app:srcCompat="@drawable/bd"/>


                <Spinner
                    android:visibility="gone"
                    android:id="@+id/spinner_registration_mobile_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:minHeight="35dp"
                    android:minWidth="60dp"
                    android:theme="@style/SpinnerStyle"/>

                <EditText
                    android:id="@+id/etxt_registration_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="@string/hint_enter_your_number"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:minHeight="45dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="60dp"
                android:background="@color/underline_color"/>


            <ride.happyy.driver.widgets.CustomTextView
                android:id="@+id/txt_registration_mobile_otp_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/label_enter_the_verification_code"/>


            <LinearLayout
                android:id="@+id/ll_registration_mobile_otp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_two"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_three"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_four"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_five"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

                <ride.happyy.driver.widgets.OTPEditText
                    android:id="@+id/etxt_registration_mobile_six"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_white_with_gray_edge"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/text_4"
                    android:textColorHint="@color/text_hint"
                    android:textCursorDrawable="@color/colorPrimaryDark"/>

            </LinearLayout>
            <ride.happyy.driver.widgets.CustomTextView
                android:id="@+id/resendCodeTV"
                android:layout_marginLeft="12dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If didn't get code?  Click resend-icone after 1 minute"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/RegistrationFAB"
                style="@style/RegistrationFAB"
                android:onClick="onResendFabButton"
                app:backgroundTint="@color/white"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_refresh_green_24dp"/>

            <android.support.design.widget.FloatingActionButton
                style="@style/RegistrationFAB"
                android:onClick="onPasswordResetnMobileNumberSubmitClick"
                app:backgroundTint="@color/red"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_arrow"/>




        </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/newpasswordLinearlayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:paddingTop="50dp">


        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@drawable/logo_red_round"/>


        <EditText
            android:visibility="gone"
            android:id="@+id/etxt_forgot_password_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="320dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:ems="30"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_hint"/>


        <EditText
            android:id="@+id/etxt_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:ems="30"
            android:hint="Enter new password"
            android:inputType="textWebPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_hint"/>


        <View
            android:layout_marginBottom="5dp"
            style="@style/RegistrationItemUnderline"/>


        <Button
            android:id="@+id/btn_forgot_password_reset"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_click_black_rectangle_with_semicircle_edge"
            android:onClick="onForgotPasswordResetClick"
            android:text="@string/btn_submit"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>


    </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
