<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/login_bd_image"
    tools:context="ride.happyy.driver.activity.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:orientation="vertical"
            android:padding="20dp">

            <ride.happyy.driver.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EARN WITH"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:textAllCaps="true"/>

            <ride.happyy.driver.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HAPPYY DRIVE"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/iv_registration_mobile_country_flag"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:padding="2dp"
                app:srcCompat="@drawable/bd"/>


            <Spinner
                android:id="@+id/spinner_registration_mobile_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:minHeight="35dp"
                android:minWidth="50dp"
                android:theme="@style/SpinnerStyle"/>

            <EditText
                android:id="@+id/etxt_registration_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/hint_enter_your_number"
                android:inputType="phone"
                android:maxLength="11"
                android:minHeight="45dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:background="@color/underline_color"/>


        <ride.happyy.driver.widgets.CustomTextView
            android:id="@+id/txt_registration_mobile_otp_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/label_enter_the_verification_code"/>


        <LinearLayout
            android:id="@+id/ll_registration_mobile_otp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="20dp">

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_three"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_four"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_five"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

            <ride.happyy.driver.widgets.OTPEditText
                android:id="@+id/etxt_registration_mobile_six"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_white_with_gray_edge"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_4"
                android:textColorHint="@color/text_hint"
                android:textCursorDrawable="@color/colorPrimaryDark"/>

        </LinearLayout>
        <ride.happyy.driver.widgets.CustomTextView
            android:id="@+id/resendCodeTVReg"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If didn't get code?  Click resend-icone after 1 minute"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/resend_codeFAB"
        style="@style/RegistrationRESEND"
        android:onClick="onClickResendFABtn"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_refresh_green_24dp"/>

    <android.support.design.widget.FloatingActionButton
        style="@style/RegistrationFAB"
        android:onClick="onRegistrationMobileNumberSubmitClick"
        app:backgroundTint="@color/red"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_arrow"/>

</FrameLayout>
